.main-container{
  width: 100vw;
  height: 100vh;
}
.main-header{
  width: 670rpx;
  height: 200rpx;
  background-color: #1bbe64;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #fff;
  line-height: 100rpx;
}
.main-info-text{
  float: right;
}

.main-map-container{
  width: 650rpx;
  height: 460rpx;
  margin: -100rpx auto 0;
}
.main-map{
  width: 650rpx;
  height: 400rpx;
}
.main-map-location{
  width: 630rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(27, 190, 100, 0.7);
  font-size: 28rpx;
  color: #fff;
  padding-left: 20rpx;
}

.authorization-title{
  width: 750rpx;
  height: 52rpx;
  line-height: 30rpx;
  font-size: 36rpx;
  color: #333;
}
.authorization-divider{
  background:#1bbe64;
  width: 8rpx;
  height: 32rpx;
  display: inline-block;
  margin: 40rpx 20rpx 0 50rpx;
}

.main-collection{
  width: 660rpx;
  height: 450rpx;
  margin: 45rpx auto 0;
  background-color: #fff;
  box-shadow: 0 0 10px 0 #d7d7d7;
  border-radius: 5px;
}
.main-collection-warp{
  width: 660rpx;
  height: 300rpx;
}
.main-collection-unit{
  width: 220rpx;
  height: 150rpx;
  float: left;
  box-sizing: border-box;
  text-align: center;
  font-size: 30rpx;
  color: #666;
}
.main-cmd-img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 30rpx auto 15rpx;
}
.main-bluetooth{
  width: 660rpx;
  height: 150rpx;
  text-align: center;
}
.main-bluetooth-img{
  width: 138rpx;
  height: 87rpx;
  display: block;
  float: left;
  margin: 32rpx 20rpx 0 180rpx;
}
.main-bluetooth-txt{
  font-size: 30rpx;
  color: #666;
  line-height: 150rpx;
  display: block;
  float: left;
}

.main-mask{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
}
.main-mask-content{
  width: 600rpx;
  height: 400rpx;
  background: #fff;
  border-radius: 5px;
  position: absolute;
  left: 50%;
  top: 60%;
  margin-left: -300rpx;
  text-align: center;
}
.mask-res-tag{
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}
.mask-res-ing{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 100rpx auto;
  animation: rotate 1s linear infinite;
}
.mask-res-tips{
  font-size: 40rpx;
  color: #666;
}

@keyframes rotate{
  0%{
    transform: rotate(0deg);
  }
  50%{
    transform: rotate(180deg);
  }
  100%{
    transform: rotate(360deg);
  }
}

.main-app-skip{
  text-align: center;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
}


