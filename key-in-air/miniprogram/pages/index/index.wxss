.index-container{
  width: 100vw;
  height: 100vh;
}
.index-header{
  width: 750rpx;
  height: 401rpx;
  position: relative;
  padding-top: 140rpx;
  text-align: center;
}
.index-header-img{
  width: 750rpx;
  height: 521rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.index-user-img{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 0 auto 20rpx;
  overflow: hidden;
}
.index-user-nickname{
  font-size: 36rpx;
  color: #fff;
}

.authorization-title{
  width: 750rpx;
  height: 52rpx;
  line-height: 30rpx;
  font-size: 36rpx;
  color: #333;
}
.authorization-divider{
  background:#1bbe64;
  width: 8rpx;
  height: 32rpx;
  display: inline-block;
  margin: 20rpx 20rpx 0 50rpx;
}

.index-entrance{
  width: 650rpx;
  height: auto;
  margin: 45rpx auto;
  background-color: #fff;
  box-shadow: 0 0 10px 0 #d7d7d7;
  border-radius: 5px;
}
.index-entrance-unit{
  width: 650rpx;
  height: 120rpx;
  line-height: 120rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  padding: 0 40rpx;
  font-size: 34rpx;
  color: #666;
}
.index-vin{
  float: right;
}


